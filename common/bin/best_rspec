#!/bin/sh

if [ `which spring` ]; then
  # use spring command if it is around
  spring rspec $@
elif [ -f bin/rspec ]; then
  # use binstub if it is around
  echo ./bin/rspec $@
  ./bin/rspec $@
elif [ -S .zeus.sock ]; then
  echo "Running tests with Zeus"
  zeus test $@
else
  echo 'Running with naked `rspec`'
  rspec $@
fi
