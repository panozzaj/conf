[alias]
        ad = add
        add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
        alias = !git aliases
        aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=> \\2/' | sort
        amend = commit --amend
        amend-nc = commit --amend -C HEAD # amend without comment
        authors = !git log --pretty=format:%aN | sort | uniq -c | sort -rn
        cleanup = ! git remove-merged-local-branches && git remove-merged-remote-branches
        co = checkout
        cp = cherry-pick
        ff = merge --ff-only @{u}
        ignore = !git-custom-ignore $2
        ignore-local = exclude
        local-ignore = exclude
        ls-ignored = ls-files --exclude-standard --ignored --others
        man = help
        modified = ! git status --porcelain | cut -d ' ' -f 3
        modified-but-not-deleted = ! git status --porcelain | egrep -v ' D' | cut -d ' ' -f 3
        pop = stash pop
        praise = blame
        rb = rebase @{u}
        rbr = rename-branch-remote
        rm-sub = remove-submodule
        rm-submodule = remove-submodule
        rmsub = remove-submodule
        reset-whitespace = !(git diff -b --numstat | egrep $'^0\t0\t' | cut -d$'\t' -f3- | xargs git checkout HEAD --)
        reste = reset
        rest = reset
        rset = reset
        sub = submodule
        wt = worktree
[branch]
        autosetupmerge = true
[color]
        ui = auto
        interactive = auto
[core]
        excludesfile = ~/.cvsignore
        editor = "/opt/homebrew/bin/mvim -f"
        ignorecase = false
[diff]
        renames = copies
        noprefix = true
        colorMoved = default
[difftool "sourcetree"]
        cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[github]
        user = panozzaj
[grep]
        lineNumber = true
[init]
        templatedir = ~/conf/common/git_templates
	defaultBranch = main
[merge]
        stat = true
[mergetool "mvimdiff"]
        cmd = /opt/homebrew/bin/mvimdiff -f "$LOCAL" "$MERGED" "$REMOTE"
[mergetool "sourcetree"]
        cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
        trustExitCode = true
[pull]
        ff = only
[push]
        default = tracking
[rerere]
        enabled = 0
[user]
        name = Anthony Panozzo
        email = panozzaj@gmail.com
[diff "ansible-vault"]
	textconv = ansible-vault view
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[includeIf "gitdir:~/Documents/dev/woven/"]
  path = .gitconfig-woven
[includeIf "gitdir:~/Documents/dev/woven/code/woven-reviews/"]
  path = .gitconfig-woven-your-coworker

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    #line-numbers = true

    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = zdiff3
[rebase]
	autosquash = true
